{
  "name": "franzl/lti",
  "description": "An LTI Tool Provider library for PHP",
  "minimum-stability": "stable",
  "license": "LGPL-3.0-or-later",
  "authors": [
    {
      "name": "Franz Liedke",
      "email": "franz@develophp.org"
    }
  ],
  "autoload": {
    "psr-4": {
      "Franzl\\Lti\\": "src/"
    }
  },
  "require": {
    "php": ">=7.2",
    "psr/http-message": "~1.0",
    "guzzlehttp/guzzle": "~7.2",
    "guzzlehttp/oauth-subscriber": "0.4.*"
  },
  "require-dev": {
    "phpspec/phpspec": "~6.0",
    "squizlabs/php_codesniffer": "2.*",
    "zendframework/zend-diactoros": "~1.3"
  },
  "scripts": {
    "test": "phpspec --ansi run",
    "cs": "phpcs --standard=PSR2 -np src",
    "fix-cs": "phpcbf --standard=PSR2 -np src"
  }
}
